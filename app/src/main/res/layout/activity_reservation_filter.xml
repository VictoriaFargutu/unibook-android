<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fargutuvictoria.unibook.ui.filter.ReservationFilterActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/filters_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/filters_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Filters"
            app:titleTextColor="@color/white" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/classroom_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/classroom_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/classroom_type_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/classroom_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/classroom_type_filter"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/classroom_type"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/day_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/day_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/day_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/day_filter"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/week_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/day"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_type_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/week_type_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/week_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/week_type_filter"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/week_type"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/date_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/date_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <EditText
                        android:id="@+id/date_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="@string/choose_the_date"
                        android:inputType="date"
                        android:longClickable="false"
                        android:paddingTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/date_filter"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hour_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hour_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/hour_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/hour_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/hour_row"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hour_filter"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/year_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/year_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/year_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/year_row"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/year"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/specialization_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/specialization_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/specialization_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/specialization_row"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/students_group_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/specialization"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/students_group_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/students_group_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/students_group_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/students_group_row"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/students_subgroup_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/students_group_filter"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/students_subgroup_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/students_subgroup_checkbox"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp" />

                    <Spinner
                        android:id="@+id/students_subgroup_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:spinnerMode="dropdown"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/students_subgroup_row"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/darkGray" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/filters_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/reset"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/filters_apply_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filters_reset_button"
            android:layout_marginBottom="11dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/apply"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
