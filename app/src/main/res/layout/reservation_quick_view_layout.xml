<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/quickViewBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/carwash_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_event_black_48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">


                <TextView
                    android:id="@+id/reservation_quick_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    android:paddingStart="10dp"
                    android:text="PII3"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/reservation_quick_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reservation_quick_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Hour"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/reservation_quick_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Day"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reservation_week_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="WeekType"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/reservation_quick_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/border_background"
                android:paddingBottom="3dp"
                android:paddingEnd="3dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:text="Course"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/reservation_quick_students_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Year: "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reservation_quick_specialization"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Specialization"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/reservation_quick_students_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Students Group"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reservation_quick_subgroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_background"
                    android:paddingEnd="3dp"
                    android:paddingStart="10dp"
                    android:text="Subgroup: "
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp">

        <Button
            android:id="@+id/quick_cancel_reservation"
            android:layout_width="160dp"
            android:layout_height="35dp"

            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@color/colorPrimary"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/cancel_reservation"
            android:textColor="@color/secondaryTextColor"
            android:textSize="12sp" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="15dp"
            android:background="@color/colorPrimary"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/close"
            android:textColor="@color/secondaryTextColor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
