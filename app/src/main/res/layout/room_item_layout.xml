<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="PII 3"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/go_to_reservation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1.0"
                android:src="@drawable/ic_arrow_forward_black_16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room_capacity"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="@string/capacity"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/room_capacity_nr"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="nr"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/projector_text"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="@string/projector"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/projector_bool"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textAlignment="textEnd"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9dc9c9c9" />
</LinearLayout>
